{
    "name": "@arpadroid/forms",
    "version": "1.0.0",
    "description": "A web components library for building forms",
    "main": "./dist/forms.js",
    "exports": "./dist/forms.js",
    "type": "module",
    "scripts": {
        "build": "webpack --mode production",
        "build:watch": "webpack --mode production --watch",
        "build:storybook": "storybook build",
        "css:bundle:prod": "node ./scripts/bundle-css.js --mode=production",
        "css:bundle:dev": "node ./scripts/bundle-css.js --mode=development",
        "dev": "webpack serve --mode development",
        "prepublish": "npm run build",
        "start:ui": "cd ../ui && npm run build:watch",
        "start:application": "cd ../application && npm run build:watch",
        "start:i18n": "cd ../i18n && npm run build:watch",
        "start:tools": "cd ../tools && npm run build:watch",
        "start:dev": "npm run start:arpadroid & npm run start:ui & npm run start:application & npm run start:i18n & npm run start:tools & npm run build:watch",
        "storybook:dev": "npm run start:dev & storybook dev -p 6006",
        "test": "npm run test:storybook",
        "test:playwright:ci": "npx playwright test --config playwright.config.cjs",
        "test:playwright:dev": "npm run start:dev & npx playwright test --config playwright.config.cjs --ui",
        "test:storybook": "test-storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arpadroid/forms.git"
    },
    "keywords": [
        "html",
        "forms",
        "component",
        "library",
        "form",
        "builder"
    ],
    "author": "Andres Vaquero @arpadroid <web.andresvaquero@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arpadroid/forms/issues"
    },
    "homepage": "https://github.com/arpadroid/forms#readme",
    "devDependencies": {
        "@arpadroid/stylesheet-bundler": "^1.1.1",
        "@babel/core": "^7.24",
        "@babel/plugin-proposal-optional-chaining-assign": "^7.23.7",
        "@babel/plugin-syntax-import-assertions": "^7.23.3",
        "@babel/preset-env": "^7.23.9",
        "@chromatic-com/storybook": "^1.3.2",
        "@playwright/test": "^1.43.1",
        "@storybook/addon-a11y": "^8.0.9",
        "@storybook/addon-essentials": "^8.0.9",
        "@storybook/addon-interactions": "^8.0.9",
        "@storybook/addon-links": "^8.0.9",
        "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
        "@storybook/blocks": "^8.0.9",
        "@storybook/test": "^8.0.9",
        "@storybook/test-runner": "^0.17.0",
        "@storybook/web-components": "^8.0.9",
        "@storybook/web-components-webpack5": "^8.0.9",
        "babel-loader": "^9.1.3",
        "chromatic": "^11.3.0",
        "copy-webpack-plugin": "^12.0.2",
        "html-webpack-plugin": "^5.6.0",
        "jsdom": "^24.0.0",
        "lit": "^3.1.2",
        "mini-css-extract-plugin": "^2.8.1",
        "storybook": "^8.0.9",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.2"
    },
    "dependencies": {
        "@arpadroid/application": "file:../application",
        "@arpadroid/i18n": "file:../i18n",
        "@arpadroid/tools": "file:../tools",
        "@arpadroid/ui": "file:../ui",
        "@ungap/custom-elements": "^1.3.0"
    }
}
